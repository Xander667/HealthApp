<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.david.healthapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health App!"
        android:id="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cals"
        android:id="@+id/calorieInput"
        android:textSize="40dp"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/weightTextBox"
        android:layout_alignEnd="@+id/weightTextBox" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="cals"
        android:layout_alignTop="@+id/calorieInput"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drinkSpinner"
        android:spinnerMode="dropdown"
        android:layout_above="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/saveButton"
        android:layout_toEndOf="@+id/saveButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drinks"
        android:id="@+id/textView"
        android:textSize="40dp"
        android:layout_above="@+id/textView3"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smokes"
        android:id="@+id/textView3"
        android:textSize="40dp"
        android:layout_above="@+id/textView8"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Push Ups"
        android:id="@+id/textView4"
        android:textSize="40dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/calorieInput"
        android:layout_alignEnd="@+id/calorieInput" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:id="@+id/weightTextBox"
        android:textSize="40dp"
        android:layout_below="@+id/editText"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tummy"
        android:id="@+id/textView5"
        android:textSize="40dp"
        android:layout_above="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        android:id="@+id/textView6"
        android:textSize="40dp"
        android:layout_below="@+id/weightTextBox"
        android:layout_alignRight="@+id/weightTextBox"
        android:layout_alignEnd="@+id/weightTextBox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plank"
        android:id="@+id/textView7"
        android:textSize="40dp"
        android:layout_above="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dumbells"
        android:id="@+id/textView8"
        android:textSize="40dp"
        android:layout_above="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dumbellWeightInput"
        android:text="lbs"
        android:layout_above="@+id/textView7"
        android:layout_alignRight="@+id/detailsInput"
        android:layout_alignEnd="@+id/detailsInput" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plankDurationInput"
        android:text="secs"
        android:layout_above="@+id/textView4"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pushUpToalInput"
        android:text="reps"
        android:layout_above="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weightInput"
        android:text="lbs"
        android:layout_above="@+id/textView6"
        android:layout_alignRight="@+id/detailsInput"
        android:layout_alignEnd="@+id/detailsInput" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailsInput"
        android:text="..."
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignRight="@+id/drinkSpinner"
        android:layout_alignEnd="@+id/drinkSpinner"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smokeSpinner"
        android:spinnerMode="dropdown"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toLeftOf="@+id/detailsInput"
        android:layout_below="@+id/drinkSpinner"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignLeft="@+id/drinkSpinner"
        android:layout_alignStart="@+id/drinkSpinner" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tummySpinner"
        android:spinnerMode="dropdown"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toLeftOf="@+id/detailsInput"
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_alignLeft="@+id/drinkSpinner"
        android:layout_alignStart="@+id/drinkSpinner" />

</RelativeLayout>
